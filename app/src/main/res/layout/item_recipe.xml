<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_layout_margin"
    android:layout_marginRight="@dimen/list_layout_margin"
    android:layout_marginTop="@dimen/list_layout_margin"
    android:layout_marginBottom="@dimen/list_layout_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardElevation="@dimen/cardview_elevation_resting"
    android:stateListAnimator="@anim/cardview_state_list_anim">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/recipe_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            xmlns:android="http://schemas.android.com/apk/res/android" />

        <TextView
            android:id="@+id/recipe_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorTitleText"
            android:background="@color/title_background_protection"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:paddingLeft="@dimen/list_recipe_padding_normal"
            android:paddingRight="@dimen/list_recipe_padding_normal"
            android:maxLines="1" />

    </FrameLayout>
</android.support.v7.widget.CardView>